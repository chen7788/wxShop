<!--pages/brandDetail/index.wxml-->

<view class="container">
  <view class="brand-info">
    <view class="name">
      <image class="img" src="{{brand.picUrl}}" background-size="cover"></image>
      <view class="info">
        <text>{{brand.name}}</text>
        <view class="line"></view>
      </view>
    </view>
    <view class="desc">{{brand.desc}}</view>
  </view>
  <view class="cate-item">
    <view class="content" wx:for="{{goodsList}}" wx:key="id">
      <navigator class="item {{index % 2 == 0 ? 'item-b' : ''}}" url="../goods/index?id={{item.id}}">
        <image class="img" src="{{item.picUrl}}" backGround-size="cover"></image>
        <text class="name">{{item.name}}</text>
        <text class="price">ï¿¥{{item.retailPrice}}</text>
      </navigator>
    </view>
  </view>
</view>
