/* pages/goods/index.wxss */
.goodsimgs{
  width: 100%;
  height: 750rpx;
}
.goodsimgs image{
  width: 100%;
  height: 100%;
}
.goods_name{
  height: 90rpx;
  background-color: lightgrey;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.goods_name .left{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 30rpx;
  width: calc(100% - 130rpx);
}
.goods_name .right{
  color: white;
  font-size: 30rpx;
  font-weight: bold;
  height: 90rpx;
  line-height: 90rpx;
  width: 130rpx;
  padding-left: 20rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  background-image: linear-gradient(to right, #f3d10e 0%, #f48f18 100%);
}
.goods-info{
  background: white;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.goods-info .desc{
  font-size: 26rpx;
  color: gray;
  padding-top: 10rpx;
}
.goods-info .price{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: start;
  margin-bottom: 40rpx;
}
.goods-info  .retail-price{
  color: red;
  font-size: 32rpx;
}
.goods-info  .counterPrice{
  text-decoration: line-through;
  padding-left: 20rpx;
  color: gray;
 
}
.goods-info .brand text{
  color: #f48f18;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border: #f48f18 solid 1rpx;
}
.goods-info .line{
  margin-top: 40rpx;
  height: 1rpx;
  background: #f48f18;
}
.section-nav{
  height: 100rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: bold;
}
.section-nav image{
  width: 40rpx;
  height: 40rpx;
}
.goods-attr{
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  background: white;
}
.goods-attr .title{
  height: 80rpx;
  background: white;
  font-size: 26rpx;
  font-weight: bold;
  line-height: 80rpx;
}
.goods-attr .item{
  padding: 15rpx;
  background: lightgray;
  border-bottom: white solid 3rpx;
  display: flex;
  justify-content: start;
}
.goods-attr .item .right{
  padding-left: 40rpx;
  font-size: 26rpx;
  white-space: nowrap;  
text-overflow:ellipsis;
overflow:hidden;
  width: calc(100% - 140rpx);
}
.goods-attr .item .left{
  font-size: 26rpx;
  font-weight: bold;
  width: 110rpx;
  max-lines: 1;
  white-space: nowrap;  
text-overflow:clip;
overflow:hidden;
}
.detail .item{
  width: 100%;
  height: 750rpx;
  background: white;
}
.detail .item image{
  width: 100%;
  height: 100%;
}
.common-problem{
  background: white;
  padding: 20rpx;
}
.header{
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.left{
  width: 150rpx;
  height: 2rpx;
  background: lightgrey;
}
.title{
  font-size: 28rpx;
  width: 180rpx;
  text-align: center;
}
.right{
  width: 150rpx;
  height: 2rpx;
  background: lightgrey;
}
.common-problem .item{
  padding-bottom: 25rpx;
}
.common-problem .item .question-box{
  display: flex;
  align-items: center;
  justify-content: start;
  margin-bottom: 20rpx;
}
.common-problem .item .spot{
  float: left;
  height: 8rpx;
  width: 8rpx;
  background: #b4282d;
  border-radius: 50%;
}
.common-problem .item .question{
  padding-left: 10rpx;
  font-size: 26rpx;
}
.common-problem .item .answer{
  padding-left: 18rpx;
  font-size: 24rpx;
  color: gray;
}
.related-goods{
  background: white;
  padding: 20;
}
.related-goods .content{
  background: lightgray;
}
.related-goods .item{
  width: calc(50% - 3rpx);
  float: left;
  margin-right: 3rpx;
  margin-bottom: 6rpx;
  text-align: center;
  background: white;
  overflow: hidden;
  /* border-right: lightgray solid 6rpx;
  border-bottom: lightgray solid 6rpx; */
}
.related-goods .item-b{
  margin-left: 3rpx;
  margin-right: 0;
  /* border-left: lightgray solid 6rpx;
  border-bottom: lightgray solid 6rpx; */
}
.related-goods .item .name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 26rpx;
}
.related-goods .item .img{
  width: 302rpx;
  height: 302rpx;
}