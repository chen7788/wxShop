/* pages/category/index.wxss */
.container{
  background: white;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.search .icon{
  width: 30rpx;
  height: 30rpx;
  background: url('data:image/png;base64,') center no-repeat;
  background-size: 100%;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.search .input {
  height: 70rpx;
  margin: 30rpx;
  width: calc(100% - 60rpx);
  background-color: lightgray;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  vertical-align: middle;
}
.search text{
  font-size: 32rpx;
  color: gray;
}

.catalog{
  border-top: lightgray solid 1rpx;
  display: flex;
  flex: 1;
}
.catalog .nav{
  width: 25%;
}
.catalog .nav .item{
  height: 60rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  text-align: left;
}
.catalog .nav .item.active{
  color: #85c43f;
  font-size: 29rpx;
  border-left: 6rpx solid #85c43f;
}
.catalog .cate{
  padding-top: 30rpx;
  width: 75%;
  border-left: solid lightgrey 1rpx;
}
.catalog .cate .image{
  height: 200rpx;
  margin-left: 30rpx;
  width: calc(100% - 60rpx);
}
.catalog .hd{
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.catalog .hd text{
  font-size: 28rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
}
.catalog .hd .line{
  width: 100rpx;
  height: 1rpx;
  background: lightgray;
}
.catalog .bd{
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.catalog .bd .item{
  float: left;
  width: calc((100% - 40rpx) / 3);
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 5rpx;
  text-align: center;
}
.catalog .bd .item.last {
  margin-right: 0;
}
.catalog .bd .icon{
  width: 100%;
  height: 152rpx;
}
.catalog .bd .name{
  font-size: 24rpx;
  display: block;
}