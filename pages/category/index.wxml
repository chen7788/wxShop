<!--pages/category/index.wxml-->
<view class="container">
  <view class="search">
    <navigator url="/pages/search/index" class="input">
      <image class="icon"></image>
      <text>搜索，共{{goodsCount}}款商品</text>
    </navigator>
  </view>
  <view class="catalog">
    <scroll-view class="nav" scroll-y="true">
      <view class="item {{currentCategory.id == item.id ? 'active' : ''}}" wx:for="{{categoryList}}" wx:key="id" data-id="{{item.id}}" data-index="{{index}}" bindtap="switchCate">{{item.name}}</view>
    </scroll-view>
    <view class="line"></view>
    <scroll-view class="cate" scroll-y="true">
      <image class="image" src="{{currentCategory.picUrl}}"></image>
      <text>{{currentCategory.fontName}}</text>
      <navigator url="url" class="banner">
      </navigator>
      <view class="hd">
        <text class="line"></text>
      <text>{{currentCategory.name}}分类</text>
      <text class="line"></text>
      </view>
      <view class="bd">
        <navigator url="" class="item {{(index+1) %3 == 0 ? 'last' : ''}}" wx:key="id" wx:for="{{currentSubCategoryList}}">
          <image class="icon" src="{{item.picUrl}}"></image>
          <text class="name">{{item.name}}</text>
        </navigator>
      </view>
    </scroll-view>
  </view>
</view>
