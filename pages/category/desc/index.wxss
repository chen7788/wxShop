.container{
  background: white;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.cate-nav scroll-view{
  white-space: nowrap
}

.cate-nav .item {
  min-width: 130rpx;
  display: inline-block;
  margin: 0 12rpx;
}
.cate-nav .item .name{
  height: 84rpx;
  font-size: 26rpx;
  line-height: 84rpx;
  text-align: center;
}
.cate-nav .item.active{
  color: yellowgreen;
  border-bottom: yellowgreen solid 6rpx;
}
.swiper{
  margin-top: 10rpx;
  height: calc(100vh - 100rpx);
  width: 100%;
}
.swiper .content{
  width: 100%;
  background: lightgray;
  height: 100%;
}
.swiper .cate-item{
 margin-left: 10rpx;
 margin-right: 10rpx;
}
.swiper .cate-item .item{
  width: calc(50% - 43rpx);
  float: left;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-right: 3rpx;
  margin-bottom: 6rpx;
  text-align: center;
  background: white;
  overflow: hidden;
  /* border-right: lightgray solid 6rpx;
  border-bottom: lightgray solid 6rpx; */
}
.swiper .cate-item .item-b{
  margin-left: 3rpx;
  margin-right: 0;
  /* border-left: lightgray solid 6rpx;
  border-bottom: lightgray solid 6rpx; */
}
.swiper .cate-item .name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 26rpx;
}
.swiper .cate-item .img{
  width: 100%;
  height: 302rpx;
}
.swiper .cate-item .price{
  font-size: 26rpx;
  color: #b4282d;
  padding-bottom: 10rpx;
}